@model IEnvironmentCrimeRepository
@{
    Layout = "_InvestigatorLayout";
}

<h2>Ärenden</h2>
<p class="info">Du är inloggad som handläggare</p>

<table id="managerForm">
    <tr>
        <td class="label">Välj status:</td>
        <td>&nbsp;</td>
        <td class="label">Ärendenummer:</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <td>
            <select name="status">
                <option selected="selected">Välj alla</option>
                @foreach (ErrandStatus errandStatus in Model.ErrandStatuses)
                {
                    <option>@errandStatus.StatusName</option>
                }
            </select>
        </td>
        <td>
            <input class="button" type="submit" value="Hämta lista"/>
        </td>
        <td>
            <input name="casenumber"/>
        </td>
        <td>
            <input class="button" type="submit" value="Sök"/>
        </td>
    </tr>
</table>

<table>
    <tr>
        <th>Ärende anmält</th>
        <th>Ärendenummer</th>
        <th>Miljöbrott</th>
        <th>Status</th>
        <th>Avdelning</th>
        <th>Handläggare</th>
    </tr>
    @foreach (Errand errand in Model.Errands)
    {
        <tr>
            <td>@errand.DateOfObservation</td>
            <td>
                <a asp-controller="Investigator" asp-action="CrimeInvestigator" asp-route-id="@errand.ErrandID">@errand.ErrandID</a>
            </td>
            <td>@errand.TypeOfCrime</td>
            <td>@errand.StatusId</td>
            <td>@errand.DepartmentId</td>
            <td>@errand.EmployeeId</td>
        </tr>
    }

</table>